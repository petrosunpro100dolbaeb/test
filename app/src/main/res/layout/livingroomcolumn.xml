<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/ic_frame_background_button">

        <ImageView
            android:id="@+id/icon_ImageView"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_living_room" />

        <TextView
            android:id="@+id/room_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14px"
            android:text="Living Room"
            android:textColor="@color/redsmarthouse"
            android:textSize="30px" />

        <TextView
            android:id="@+id/devices_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="Ã—3 Devices"
            android:textColor="#707070"
            android:textSize="30px"/>
    </LinearLayout>



</LinearLayout>